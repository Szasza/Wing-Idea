<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.olivernybroe.wingidea</id>
    <name>Wing-Idea</name>
    <vendor>olivernybroe</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>
    <depends>org.jetbrains.plugins.textmate</depends>
    <depends>JavaScript</depends>

    <resource-bundle>messages.WingBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.olivernybroe.wingidea.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <platform.lsp.serverSupportProvider
                implementation="com.github.olivernybroe.wingidea.WingLspServerSupportProvider"/>
      <!--  <fileType name="Wing"
                  implementationClass="com.github.olivernybroe.wingidea.lang.WingFileType"
                  fieldName="INSTANCE"
                  language="Wing"
                  extensions="w"/>-->
        <fileEditorProvider implementation="com.github.olivernybroe.wingidea.WingPreviewEditorProvider"/>
        <fileEditorProvider implementation="com.github.olivernybroe.wingidea.WingSplitEditorProvider"/>
        <fileIconProvider implementation="com.github.olivernybroe.wingidea.WingFileIconProvider"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.olivernybroe.wingidea.listeners.MyApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>

    <actions>
        <action id="Wing.AddWingConnection" class="com.github.olivernybroe.wingidea.AddWingConnectionAction" text="Wing Connection">
            <add-to-group group-id="ServiceView.AddService"/>
        </action>
    </actions>
</idea-plugin>
